<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DEF8F8"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="134dp"
            android:src="@drawable/top_corner"></ImageView>

        <LinearLayout
            android:id="@+id/mentorme_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="93dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mentor"
                android:textColor="#2DA6AD"
                android:textSize="54sp"
                android:fontFamily="@font/grosskunstitalic"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="me"
                android:textColor="#FFC90A"
                android:textSize="54sp"
                android:fontFamily="@font/grosskunstitalic"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_blue_border"
            android:layout_marginTop="15dp"
            android:layout_below="@id/mentorme_txt"
            android:orientation="vertical">
            <TextView
                android:id="@+id/start_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="18dp"
                android:text="Get Started!"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp">
            </TextView>
            <EditText
                android:id="@+id/name_edittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_txt"
                android:paddingLeft="16dp"
                android:hint="Enter Name"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:textColorHint="#918C8C"
                android:textColor="#918C8C">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp">
            </TextView>
            <EditText
                android:id="@+id/email_edittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_txt"
                android:paddingLeft="16dp"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:textColorHint="#918C8C"
                android:textColor="#918C8C">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp">
            </TextView>
            <EditText
                android:id="@+id/phone_no_edittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_txt"
                android:paddingLeft="16dp"
                android:hint="Enter Contact Number"
                android:inputType="phone"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:textColorHint="#918C8C"
                android:textColor="#918C8C">
            </EditText>

            <TextView
                android:id="@+id/country_txt"
                android:layout_below="@+id/phone_no_edittxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp">
            </TextView>

            <RelativeLayout
                android:id="@+id/country_dropdown"
                android:layout_width="355dp"
                android:layout_height="42dp"
                android:background="@drawable/dropdown_menu_spinner"
                android:paddingLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/select_country_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Select Country"
                    android:textSize="16sp"
                    android:textColorHint="#918C8C"
                    android:textColor="#918C8C" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/dropdown"
                    android:layout_marginRight="13dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/city_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp">
            </TextView>

            <RelativeLayout
                android:id="@+id/city_dropdown"
                android:layout_width="355dp"
                android:layout_height="42dp"
                android:background="@drawable/dropdown_menu_spinner"
                android:paddingLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/select_city_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Select City"
                    android:textSize="16sp"
                    android:textColorHint="#918C8C"
                    android:textColor="#918C8C" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/dropdown"
                    android:layout_marginRight="13dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="12dp">
            </TextView>

            <EditText
                android:id="@+id/pwd_edittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_txt"
                android:paddingLeft="16dp"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:textColorHint="#918C8C"
                android:textColor="#918C8C">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password must be at least 8 characters long"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp">
            </TextView>

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="188dp"
                android:layout_height="44dp"
                android:text="Sign Up"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button"
                android:layout_gravity="center"
                android:layout_marginRight="7dp"
                android:textColor="#50C2C9"
                android:textSize="18sp"
                android:textStyle="bold">
                </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="#FFFFFF"
                android:textSize="14.2sp"
                android:layout_marginLeft="102dp">
            </TextView>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/btn_login"
                android:textSize="14.2sp"
                android:paddingLeft="-24dp"
                android:textColor="#157177">
            </Button>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>