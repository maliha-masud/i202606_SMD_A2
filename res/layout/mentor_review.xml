<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@drawable/round_border_shadow"
        android:scaleY="-1">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:background="@drawable/rounded_blue_border"
        android:scaleY="-1">
    </RelativeLayout>

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/back_darkest_blue"
        android:scaleType="fitCenter"
        android:layout_marginTop="61dp"
        android:layout_marginLeft="25dp">
    </ImageButton>

    <TextView
        android:id="@+id/hi_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_btn"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="28dp"
        android:text="Hi, Iâ€™m"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"> <!--  John Cooper -->
    </TextView>
    <TextView
        android:id="@+id/jc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hi_txt"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="28dp"
        android:text="John Cooper"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold">
    </TextView>

    <RelativeLayout
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/pic_circle"
        android:layout_below="@+id/back_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/jc_icon"
            android:layout_centerInParent="true">
        </ImageView>
    </RelativeLayout>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/jc_txt"
        android:layout_marginTop="15dp"
        android:background="#7FD9D3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/horizontal_line"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop me a review"
            android:textSize="25sp"
            android:textColor="@color/white">
        </TextView>
        <ImageButton
            android:id="@+id/community_btn"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/add_icon">
        </ImageButton>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="357dp"
        android:layout_height="183dp"
        android:layout_below="@+id/border"
        android:background="@drawable/round_border_shadow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:scaleY="-1">
    </RelativeLayout>
    <EditText
        android:id="@+id/experience_edittxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/review_box"
        android:layout_below="@+id/border"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="top"
        android:hint="Type your experience . . ."
        android:textColorHint="#909090"
        android:textSize="16sp"
        android:paddingLeft="28dp"
        android:paddingTop="28dp">
    </EditText>

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/experience_edittxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:progressTint="#157177"
        android:backgroundTint="#157177">
    </RatingBar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_blue_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/submit_btn"
            android:layout_width="345dp"
            android:layout_height="55dp"
            android:text="Submit Feedback"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18.5sp"
            android:textStyle="bold">
        </Button>
    </RelativeLayout>
</RelativeLayout>