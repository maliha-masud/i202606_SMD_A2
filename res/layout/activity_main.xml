<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="165dp"
        android:src="@drawable/top_corner">
    </ImageView>

    <LinearLayout
        android:id="@+id/mentorme_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mentor"
            android:textColor="#2DA6AD"
            android:textSize="64sp"
            android:fontFamily="@font/grosskunstitalic"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="me"
            android:textColor="#FFC90A"
            android:textSize="64sp"
            android:fontFamily="@font/grosskunstitalic"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/mentorme_txt"
        android:text="connect. ask. learn."
        android:layout_centerHorizontal="true"
        android:textColor="#157177"
        android:textSize="24sp">
    </TextView>

</RelativeLayout>