<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@drawable/round_border_shadow"
        android:scaleY="-1">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:background="@drawable/rounded_blue_border"
        android:scaleY="-1">
    </RelativeLayout>

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/back_darkest_blue"
        android:scaleType="fitCenter"
        android:layout_marginTop="61dp"
        android:layout_marginLeft="25dp">
    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/back_btn"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="12dp"
        android:text="Book your Session"
        android:textColor="#157177"
        android:textSize="21sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/jc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_btn"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="32dp"
        android:text="John Cooper"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold">
    </TextView>

    <RelativeLayout
        android:id="@+id/jc_pfp"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/pic_circle"
        android:layout_below="@+id/back_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/jc_icon"
            android:layout_centerInParent="true">
        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mentor_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/jc_pfp"
        android:layout_marginLeft="25dp">
        <ImageButton
            android:id="@+id/mentor_stars"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:background="@drawable/star_icon">
        </ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-5dp"
            android:text="4.8"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/mentor_rating"
        android:layout_marginTop="15dp"
        android:background="#7FD9D3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/horizontal_line"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1500/Session"
            android:textColor="#FFC90A"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_marginTop="5dp">
        </TextView>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </Space>
        <ImageButton
            android:id="@+id/msg_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/msg_icon">
        </ImageButton>
        <ImageButton
            android:id="@+id/phonecall_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/phonecall_icon">
        </ImageButton>
        <ImageButton
            android:id="@+id/vidcall_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/vidcall_icon">
        </ImageButton>
    </LinearLayout>

    <TextView
        android:id="@+id/month_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@id/border"
        android:text="Dec"
        android:textColor="@color/black"
        android:textSize="23sp">
    </TextView>

    <TextView
        android:id="@+id/year_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_below="@id/border"
        android:layout_toRightOf="@id/month_txt"
        android:text="2023"
        android:textColor="#0B8FAC"
        android:textSize="23sp"
        android:textStyle="bold">
    </TextView>

    <ImageView
        android:id="@+id/calendar"
        android:layout_centerHorizontal="true"
        android:layout_width="345dp"
        android:layout_height="250dp"
        android:background="@drawable/calender"
        android:layout_below="@id/year_txt"
        android:layout_marginTop="18dp">
    </ImageView>

    <TextView
        android:id="@+id/availableslots_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="26dp"
        android:layout_below="@id/calendar"
        android:text="Available Time Slots"
        android:textColor="@color/black"
        android:textSize="22.5sp"
        android:textStyle="bold">
    </TextView>

    <HorizontalScrollView
        android:id="@+id/timeslots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/availableslots_txt"
        android:layout_marginTop="5dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="14dp">
            <RelativeLayout
                android:layout_width="135dp"
                android:layout_height="62dp"
                android:background="@drawable/unselected_time_slot"
                android:layout_marginRight="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.00 AM"
                    android:layout_centerInParent="true"
                    android:textSize="21sp"
                    android:textColor="@color/black">
                </TextView>
            </RelativeLayout>
            <!-- -->
            <RelativeLayout
                android:layout_width="135dp"
                android:layout_height="62dp"
                android:background="@drawable/selected_time_slot"
                android:layout_marginRight="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.00 AM"
                    android:layout_centerInParent="true"
                    android:textSize="21sp"
                    android:textColor="@color/white">
                </TextView>
            </RelativeLayout>
            <!-- -->
            <RelativeLayout
                android:layout_width="135dp"
                android:layout_height="62dp"
                android:background="@drawable/unselected_time_slot"
                android:layout_marginRight="18dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.00 PM"
                    android:layout_centerInParent="true"
                    android:textSize="21sp"
                    android:textColor="@color/black">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/book_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_blue_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/book_btn"
            android:layout_width="345dp"
            android:layout_height="55dp"
            android:text="Book an Appointment"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18.5sp"
            android:textStyle="bold">
        </Button>
    </RelativeLayout>
</RelativeLayout>