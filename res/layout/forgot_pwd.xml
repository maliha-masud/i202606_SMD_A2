<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#DEF8F8">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/back_btn"
        android:scaleType="fitCenter"
        android:layout_marginTop="61dp"
        android:layout_marginLeft="25dp"
        android:background="@android:color/transparent">
    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="32dp"
        android:text="Forgot Password?"
        android:textSize="28sp"
        android:textColor="#157177"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="14dp"
        android:text="Donâ€™t worry! It happens. Please enter the email associated with your account."
        android:textColor="@color/black"
        android:textSize="18sp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="17.5sp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="28dp"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:id="@+id/email_edittxt"
        android:layout_width="355dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_corners_txt"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:textColorHint="#918C8C"
        android:textColor="#918C8C">
    </EditText>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_blue_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="54dp">
        <Button
            android:id="@+id/send_btn"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:text="Send"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold">
        </Button>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Remember your password?"
            android:textColor="@color/black"
            android:textSize="15sp">
        </TextView>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/btn_login"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-15dp"
            android:textColor="#21797F">
        </Button>
    </LinearLayout>

</LinearLayout>