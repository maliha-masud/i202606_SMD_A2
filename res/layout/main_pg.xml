            android:layout_marginTop="10dp"
            android:layout_marginRight="18dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="Recent Mentors"
                android:textColor="#157177"
                android:textSize="18sp"
                android:textStyle="bold">
            </TextView>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/viewrecentmentors_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:clickable="true"
                android:text="View All"
                android:textColor="#157177"
                android:textSize="14sp"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/recent_mentors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recentmentors_txt"
            android:layout_marginTop="12dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="14dp">
                <RelativeLayout
                    android:layout_width="175dp"
                    android:layout_height="165dp"
                    android:background="@drawable/search_result_boxes">
                </RelativeLayout>
                <!-- -->
                <RelativeLayout
                    android:layout_width="175dp"
                    android:layout_height="165dp"
                    android:background="@drawable/search_result_boxes"
                    android:layout_marginLeft="10dp">
                </RelativeLayout>
                <!-- -->
                <RelativeLayout
                    android:layout_width="175dp"
                    android:layout_height="165dp"
                    android:background="@drawable/search_result_boxes"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">
                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- BOTTOM NAV BAR -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_bar_circle"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_bar">
        </RelativeLayout>

        <ImageButton
            android:id="@+id/plus_btn"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/nav_plus"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true">
        </ImageButton>

        <LinearLayout
            android:id="@+id/nav_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="38dp">
            <ImageButton
                android:id="@+id/home_btn"
                android:layout_width="26.5dp"
                android:layout_height="26.5dp"
                android:background="@drawable/home_clicked">
            </ImageButton>
            <ImageButton
                android:id="@+id/search_btn"
                android:layout_width="26.5dp"
                android:layout_height="26.5dp"
                android:background="@drawable/search_unclicked"
                android:layout_marginLeft="50dp">
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/nav_bar_left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginBottom="22dp"
            android:layout_marginRight="31dp">
            <ImageButton
                android:id="@+id/chat_btn"
                android:layout_width="26.5dp"
                android:layout_height="26.5dp"
                android:background="@drawable/chats_unclicked"
                android:layout_marginRight="55dp">
            </ImageButton>
            <ImageButton
                android:id="@+id/profile_btn"
                android:layout_width="26.5dp"
                android:layout_height="26dp"
                android:background="@drawable/profile_unclicked">
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_bar_left_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="35dp">
            <TextView
                android:id="@+id/home_txt"
                android:clickable="true"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#FFFFFF">
            </TextView>
            <TextView
                android:id="@+id/search_txt"
                android:clickable="true"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:text="Search"
                android:textColor="#51A8A6">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="26dp">
            <TextView
                android:id="@+id/chat_txt"
                android:clickable="true"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="#51A8A6">
            </TextView>
            <TextView
                android:id="@+id/profile_txt"
                android:clickable="true"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:text="Profile"
                android:textColor="#51A8A6">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>