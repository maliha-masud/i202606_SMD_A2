<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="165dp"
        android:src="@drawable/top_corner"></ImageView>

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/back_blue"
        android:scaleType="fitCenter"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="15dp"
        android:background="@android:color/transparent">
    </ImageButton>
    <TextView
        android:id="@+id/notifs_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/back_btn"
        android:text="Notifications"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="14dp"
        android:textSize="25sp"
        android:textColor="#157177"
        android:textStyle="bold">
    </TextView>

    <ImageButton
        android:id="@+id/notif_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/notifs_txt"
        android:src="@drawable/bell"
        android:scaleType="fitCenter"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="13dp"
        android:background="@android:color/transparent">
    </ImageButton>

    <Button
        android:id="@+id/clear_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notif_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Clear All"
        android:textSize="16sp"
        android:textColor="#ECB800"
        android:textStyle="bold">
    </Button>

    <LinearLayout
        android:id="@+id/notifs1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clear_txt"
        android:layout_marginTop="8dp"
        android:gravity="end">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:text="You have added a mentor, Alex. Thank you!"
            android:textColor="@color/black">
        </TextView>

        <ImageButton
            android:id="@+id/cross1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/cross"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="22dp"
            android:background="@android:color/transparent">
        </ImageButton>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/notifs1"
        android:layout_marginTop="10dp"
        android:background="#C28FE1D7" />

    <LinearLayout
        android:id="@+id/notifs2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifs1"
        android:layout_marginTop="20dp"
        android:gravity="end">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:text="Your favorites list is expanding. Impressive"
            android:textColor="@color/black">
        </TextView>

        <ImageButton
            android:id="@+id/cross2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/cross"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="22dp"
            android:background="@android:color/transparent">
        </ImageButton>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/notifs2"
        android:layout_marginTop="10dp"
        android:background="#C28FE1D7" />

    <LinearLayout
        android:id="@+id/notifs3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifs2"
        android:layout_marginTop="20dp"
        android:gravity="end">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:text="You have a new message in community. ðŸ‘€"
            android:textColor="@color/black">
        </TextView>

        <ImageButton
            android:id="@+id/cross3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/cross"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="22dp"
            android:background="@android:color/transparent">
        </ImageButton>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/notifs3"
        android:layout_marginTop="10dp"
        android:background="#C28FE1D7" />

    <LinearLayout
        android:id="@+id/notifs4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifs3"
        android:layout_marginTop="20dp"
        android:gravity="end">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:text="Your favorite mentor is Online. Say Hi to him."
            android:textStyle="bold"
            android:textColor="@color/black">
        </TextView>

        <ImageButton
            android:id="@+id/cross4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/cross"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="22dp"
            android:background="@android:color/transparent">
        </ImageButton>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/notifs4"
        android:layout_marginTop="10dp"
        android:background="#C28FE1D7" />

    <LinearLayout
        android:id="@+id/notifs5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifs4"
        android:layout_marginTop="20dp"
        android:gravity="end">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:text="Thank you for booking a session. Good Luck."
            android:textColor="@color/black">
        </TextView>

        <ImageButton
            android:id="@+id/cross5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/cross"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="22dp"
            android:background="@android:color/transparent">
        </ImageButton>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/notifs5"
        android:layout_marginTop="10dp"
        android:background="#C28FE1D7" />

</RelativeLayout>