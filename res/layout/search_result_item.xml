<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_result_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="12dp">
    <RelativeLayout
        android:id="@+id/search_pic"
        android:layout_width="110dp"
        android:layout_height="105dp"
        android:background="@drawable/search_result_boxes">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/search_pic"
        android:background="@drawable/rounded_corners_txt"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp">
        <TextView
            android:id="@+id/sample_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample 1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp">
        </TextView>
        <TextView
            android:id="@+id/sample_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lead - Technology Officer"
            android:layout_below="@+id/sample_name"
            android:textSize="9sp"
            android:textColor="@color/black">
        </TextView>
        <RelativeLayout
            android:id="@+id/sample_available"
            android:layout_width="8.5dp"
            android:layout_height="8.5dp"
            android:background="@drawable/available_circle"
            android:layout_below="@id/sample_desc"
            android:layout_marginTop="4dp">
        </RelativeLayout>
        <TextView
            android:id="@+id/sample_available_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textColor="#A7DA8C"
            android:layout_toRightOf="@id/sample_available"
            android:layout_below="@id/sample_desc"
            android:textSize="8sp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp">
        </TextView>
        <TextView
            android:id="@+id/sample_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$500/Session"
            android:layout_alignParentRight="true"
            android:textColor="#F7E194"
            android:textStyle="bold"
            android:textSize="7sp"
            android:layout_marginTop="5dp">
        </TextView>
        <ImageButton
            android:id="@+id/sample_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/filled_fav_heart"
            android:layout_alignParentRight="true"
            android:layout_below="@id/sample_price"
            android:layout_marginTop="7dp"
            android:layout_marginRight="11dp">
        </ImageButton>
    </RelativeLayout>
</RelativeLayout>