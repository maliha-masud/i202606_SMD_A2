<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F8">

    <RelativeLayout
        android:id="@+id/pic_screen"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:background="#CCCCCC"
        android:layout_marginTop="90dp">
        <ImageButton
            android:id="@+id/cross_btn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/cross_gray_bg">
        </ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="HDR">
        </TextView>
        <ImageButton
            android:id="@+id/brightness_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/brightness_icon"
            android:layout_alignParentRight="true">
        </ImageButton>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic_screen"
        android:layout_marginTop="12dp">
        <TextView
            android:id="@+id/slomo_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Slo-mo"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/slomo_txt"
            android:layout_toLeftOf="@+id/photo_txt">
            <TextView
                android:id="@+id/vid_txt"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <ImageView
            android:layout_width="68dp"
            android:layout_height="20dp"
            android:src="@drawable/selected_box"
            android:layout_centerHorizontal="true">
        </ImageView>
        <TextView
            android:id="@+id/photo_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Photo"
            android:textColor="#208187"
            android:textStyle="bold"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/photo_txt"
            android:layout_toLeftOf="@+id/portrait_txt">
            <TextView
                android:id="@+id/square_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Square"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/portrait_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="Portrait"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pic_screen"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:id="@+id/gallery_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/gallery_icon">
        </ImageButton>
        <ImageButton
            android:id="@+id/upload_btn"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/upload_icon">
        </ImageButton>
        <ImageButton
            android:id="@+id/video_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:background="@drawable/vid_icon">
        </ImageButton>
    </RelativeLayout>

</RelativeLayout>